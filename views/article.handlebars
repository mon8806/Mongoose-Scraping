
{{#each articles}}
<div class="card">
  <div class="card-header"style="background-color: black; color: white;">
    <h2 class="card-title" >{{this.title}}</h2>
  </div>
  <div class="card-body" style="background-color: gray;">
    <h2 class="card-title" style="display: none" >{{this.title}}</h2>
    <p class="card-text">{{this.summary}}</p>
    <a href={{this.link}} class="btn btn-primary">{{this.link}}</a>
    <br>
    <br>
    <button class="savebutton" type="button" href={{this.link}} data-id={{this._id}} >Save Article</button>
  </div>
</div>

{{/each}}